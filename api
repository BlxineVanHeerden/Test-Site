import fetch from "node-fetch";

const HUGGING_FACE_API_KEY = "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";

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ ad: "Method not allowed" });
  }

  const { business } = req.body;
  if (!business) return res.json({ ad: "No business provided." });

  try {
    const response = await fetch(
      "https://api-inference.huggingface.co/models/gpt2",
      {
        method: "POST",
        headers: {
          "Authorization": `Bearer ${HUGGING_FACE_API_KEY}`,
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          inputs: `Write a short, catchy advertisement for a business called: ${business}`
        })
      }
    );

    const data = await response.json();
    console.log("Hugging Face response:", data); // ðŸ”¹ Add this line

    const ad = data[0]?.generated_text || "No response from AI";
    res.status(200).json({ ad });

  } catch (err) {
    console.error("Hugging Face error:", err); // ðŸ”¹ Add this line
    res.status(500).json({ ad: "Error generating ad" });
  }
}
