import fetch from "node-fetch";

// ðŸ”‘ Put your Hugging Face token here
const HUGGING_FACE_API_KEY = "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";";

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ ad: "Method not allowed" });
  }

  const { business } = req.body;
  if (!business) return res.json({ ad: "No business provided." });

  try {
    const response = await fetch(
      "https://api-inference.huggingface.co/models/gpt2", // free text-generation model
      {
        method: "POST",
        headers: {
          "Authorization": `Bearer ${HUGGING_FACE_API_KEY}`,
          "Content-Type": "application/json"
        },
        body: JSON.stringify({
          inputs: `Write a short, catchy advertisement for a business called: ${business}`
        })
      }
    );

    const data = await response.json();
    console.log("Hugging Face response:", data);

    // Hugging Face sometimes returns an object with generated_text
    let ad = "No response from AI";
    if (data?.generated_text) ad = data.generated_text;
    else if (Array.isArray(data) && data[0]?.generated_text) ad = data[0].generated_text;
    else if (Array.isArray(data) && typeof data[0] === "string") ad = data[0];

    res.status(200).json({ ad });

  } catch (err) {
    console.error("Hugging Face error:", err);
    res.status(500).json({ ad: "Error generating ad" });
  }
}
